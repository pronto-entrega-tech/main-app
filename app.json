{
  "expo": {
    "name": "Poupa Preço",
    "slug": "poupapreco",
    "version": "1.0.0",
    "orientation": "portrait",
    "primaryColor": "#2196F3",
    "backgroundColor": "#FEFEFE",
    "scheme": "poupapreco",
    "icon": "./src/assets/icon.png",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "androidNavigationBar": {
      "backgroundColor": "#FFF",
      "barStyle": "light-content"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.poupapreco.poupapreco",
      "versionCode": 1,
      "icon": "./src/assets/round-icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#2196F3"
      },
      "intentFilters": [{
        "action": "VIEW",
        "data": [
          {
            "scheme": "https",
            "host": "www.poupapreco.com.br",
            "pathPrefix": "/produto"
          },
          {
            "scheme": "https",
            "host": "www.poupapreco.com.br",
            "pathPrefix": "/mercado"
          }
        ],
        "category":[
          "BROWSABLE",
          "DEFAULT"
        ]
      }]
    },
    "ios": {
      "bundleIdentifier": "com.poupapreco.poupapreco",
      "supportsTablet": false,
      "icon": "./src/assets/icon.png",
      "usesIcloudStorage": true
    },
    "web": {
      "favicon": "./src/assets/favicon.png",
      "themeColor": "#2196F3",
      "shortName": "PoupaPreço"
    },
    "plugins": [
      [
        "expo-payments-stripe",
        {
          "scheme": "BottomTabs/ComprasTab/compras",
          "merchantId": "merchant.<com.poupapreco.poupapreco>"
        }
      ]
    ]
  }
}
