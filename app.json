{
  "expo": {
    "name": "Pronto Entrega",
    "slug": "prontoentrega",
    "version": "1.0.0",
    "description": "Fa√ßa suas compras sem sair de casa.",
    "orientation": "portrait",
    "primaryColor": "#2196F3",
    "backgroundColor": "#FEFEFE",
    "scheme": "prontoentrega",
    "icon": "./src/assets/icon.png",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "androidNavigationBar": {
      "backgroundColor": "#FFF",
      "barStyle": "light-content"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "com.prontoentrega.prontoentrega",
      "versionCode": 1,
      "icon": "./src/assets/round-icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#2196F3"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "prontoentrega.com.br",
              "pathPrefix": "/produto"
            },
            {
              "scheme": "https",
              "host": "prontoentrega.com.br",
              "pathPrefix": "/mercado"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "ios": {
      "bundleIdentifier": "com.prontoentrega.prontoentrega",
      "supportsTablet": false,
      "icon": "./src/assets/icon.png",
      "usesIcloudStorage": true
    },
    "web": {
      "name": "ProntoEntrega",
      "shortName": "Pronto",
      "favicon": "./public/favicon.ico",
      "themeColor": "#2196F3",
      "lang": "pt-BR"
    },
    "plugins": [
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "",
          "enableGooglePay": true
        }
      ]
    ]
  }
}
